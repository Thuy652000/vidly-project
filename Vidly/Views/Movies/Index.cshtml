@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "title";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (!Model.Any())
{
    <text>We don't have any movies yet.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th scope="col">Movie</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @movie.Name
                </td>
            </tr>
        }
        </tbody>
    </table>
}